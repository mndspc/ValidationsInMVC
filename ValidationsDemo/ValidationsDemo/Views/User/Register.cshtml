@model ValidationsDemo.Models.Register
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>
<body>
    <div class="container">
        @using (Html.BeginForm("Save", "User", FormMethod.Post))
        {
        <div class="row">
            @Html.AntiForgeryToken()
            <div class="col-md-6">
                <div>
                    @Html.Label("User ID:")
                    @Html.TextBoxFor(m => m.UserId, new { Class = "text-danger form-control", placeholder = "Enter UserId" })
                    @Html.ValidationMessageFor(m => m.UserId, "", new { Class = "text-danger" })
                </div>
                <br />
                <div>
                    @Html.Label("Name:")
                    @Html.TextBoxFor(m => m.UserName, new { Class = "text-success form-control", placeholder = "Enter User Name" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { Class = "text-danger" })
                </div>
                <br />
                <div>
                    @Html.Label("Date of Birth:")
                    @Html.TextBoxFor(m => m.DateOfBirth, new { Class = "text-success form-control", type = "Date" })
                    @Html.ValidationMessageFor(m => m.DateOfBirth, "", new { Class = "text-danger" })
                </div>
                <br />
                <div>
                    @Html.Label("Email:")
                    @Html.TextBoxFor(m => m.Email, new { Class = "text-success form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { Class = "text-danger" })
                </div>
                <br />
                <input type="submit" value="Register" /><br />
            </div>
        </div>
        }
        </div>
</body>
</html>
